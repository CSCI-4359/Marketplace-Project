<%- include('layouts/header.ejs') %>
<%- include('layouts/navigation.ejs') %>
<%- include('layouts/sidebar.ejs')%>
    <!-- Page Content -->
    <div id="content">
        <button type="button" id="sidebarCollapse" class="navbar-btn">
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
        </button>

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card h-100">
                        <a href="/assets/img/ct1/<%= prod.img %>"><img class="card-img-top" src="/assets/img/ct1/<%= prod.img %>" alt="<%= prod.title %>"></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="#"><%= prod.title %></a>
                            </h4>
                            <h5>$<%= prod.price %></h5>
                            <p><%= prod.description %></p>
                        <form action="/add-cart" method="POST">
                            <input type="hidden" name="id" value="<%= prod._id %>">
                            <input type="hidden" name="catId" value="cat1">
                            <button type="submit" class="btn btn-primary"> Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
