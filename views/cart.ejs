<%- include('layouts/header.ejs') %>
<%- include('layouts/navigation.ejs') %>
<%- include('layouts/sidebar.ejs')%>
<div id="content">
    <button type="button" id="sidebarCollapse" class="navbar-btn">
      <i class="fa fa-chevron-left" aria-hidden="true"></i>
    </button>
<section>
    <div class="row">
        <div class="col-10 offset-1">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Total</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    <%  let subTotal = 0; 
                        for (let p of product) { 
                        
                    %>
                    <tr>
                        <td class="col-sm-8 col-md-6">
                        <div class="media">
                            
                            <a class="thumbnail pull-left" href="/assets/img/products/<%= p.img %>"> <img class="media-object" src="/assets/img/products/<%= p.img %>" alt="<%= p.title %>" style="width: 72px; height: 72px;"></a>

                            <div class="media-body">
                                <h4 class="media-heading"><a href="#"><%= p.title %></a></h4>
                                <span>Status: </span><span class="text-success"><strong>In Stock</strong></span>
                            </div>
                        </div></td>
                        
                        <td class="col-sm-1 col-md-1 text-center"><a href="/decrease/<%= p.id %>"><i class="fa fa-chevron-down"></i></a><span><%= p.quantity %></span><a href="/increase/<%= p.id %>"><i class="fa fa-chevron-up"></i></a> </td>
                        <td class="col-sm-1 col-md-1 text-center"><strong>$<%= p.price %></strong></td>
                        <td class="col-sm-1 col-md-1 text-center"><strong>$<%= (p.quantity * p.price).toFixed(2) %></strong></td>
                        <td class="col-sm-1 col-md-1">
                        <form action="/<%= p.id %>?_method=Delete" method="POST" id="removeButton">
                            <button type="button" class="btn btn-danger">
                                <span class="glyphicon glyphicon-remove"></span> Remove
                            </button></td>
                        </form>
                    </tr>
                    <%  subTotal = subTotal + (p.quantity * p.price);
                    }   
                        var tax = 0;
                        var total = 0;
                        tax = subTotal * 0.0625;
                        total = subTotal + tax; 
                    %>
                   
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h5>Subtotal</h5></td>
                        
                        <td class="text-right"><h5><strong>$<%= subTotal.toFixed(2) %></strong></h5></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h5>Estimated tax</h5></td>
                        <td class="text-right"><h5><strong>$<%= tax.toFixed(2) %></strong></h5></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h3>Total</h3></td>
                        <td class="text-right"><h3><strong>$<%= total.toFixed(2) %></strong></h3></td>
                    </tr>
                    
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td>
                        <button type="button" class="btn btn-default">
                            <span class="glyphicon glyphicon-shopping-cart "></span> Continue Shopping
                        </button></td>
                        <td>
                        <button type="button" class="btn btn-success">
                            Checkout <span class="glyphicon glyphicon-play"></span>
                        </button></td>
                    </tr> 
                   
                </tbody>
            </table>
        </div>
    </div>
</section>
</div>
</div>
<%- include('layouts/footer.ejs') %>